<config>
	<acl>
		<resources>
			<all>
				<title>Allow Everything</title>
			</all>
			<admin>
				<children>
					<system>
						<children>
							<config>
								<children>
									<marketplace translate="title" module="marketplace">
										<title>marketplace Section</title>
									</marketplace>
								</children>
							</config>
						</children>
					</system>
					<!-- Add Marketplace children section -->
					<marketplace module="marketplace">
						<title>Marketplace</title>
						<children>
							<!-- Add Manage Sellers -->
							<manageseller module="marketplace">
								<title>Manage Sellers</title>
							</manageseller>
							<!-- Add Seller Orders -->
							<order module="marketplace">
								<title>Seller Orders</title>
							</order>
							<!-- Add Commission detail -->
							<commission module="marketplace">
								<title>Commission detail</title>
							</commission>
							<!-- Seller Products -->
							<manage_products module="marketplace">
								<title>Seller Products</title>
							</manage_products>
							<!-- Add Review and Ratings -->
							<sellerreview module="marketplace">
								<title>Review and Ratings</title>
							</sellerreview>
							<!-- Add Home Page Slider -->
							<bannerslider module="marketplace">
								<title>Home Page Slider</title>
							</bannerslider>
							<!-- Add Configuration -->
							<configuration module="marketplace">
								<title>Configuration</title>
							</configuration>
						</children>
					</marketplace>
				</children>
			</admin>
		</resources>
	</acl>
</config>