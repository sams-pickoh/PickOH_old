<ol>
<?php foreach ($this->getItems() as $_item): ?>
<?php if ($_item->getCount() > 0): ?>
    <li>
    <div id="mydiv" >
    	
    		<span > 
    	
    	<?php if($_item->getFilter()->getRequestVar()=="discount"){?>
	    <input type="checkbox" class="filter_options" 
	    	   data-url="<?php echo $_item->getUrl() ?>" 
	    	   name="<?php echo $_item->getFilter()->getRequestVar(); ?>"
	    	   value="<?php echo $_item->getValueString(); ?>" class="filter"   
	    	  <?php if ($_item->isSelected()): ?> checked="checked" <?php endif; ?>
	    <?php if ($_item->getCount() <= 0): ?>
        	disabled style=cursor:default;
        <?php endif; ?>
        style=cursor:pointer;/><?php echo $_item->getLabel()."% and above" ?>
        <?php } else{?>
        
         <input type="checkbox" class="filter_options" 
	    	   data-url="<?php echo $_item->getUrl() ?>" 
	    	   name="<?php echo $_item->getFilter()->getRequestVar(); ?>"
	    	   value="<?php echo $_item->getValueString(); ?>" class="filter"   
	    	  <?php if ($_item->isSelected()): ?> checked="checked" <?php endif; ?>
	    <?php if ($_item->getCount() <= 0): ?>
        	disabled style=cursor:default;
        <?php endif; ?>
        style=cursor:pointer;/><?php echo $_item->getLabel()?>
        <?php }?>
        <?php if ($this->shouldDisplayProductCount()): ?>
        (<?php echo $_item->getCount() ?>)
       <?php endif; ?>
       <?php if ($_item->getCount() <= 0): ?>
    		</span> 
       <?php endif;?>
  </div> 
  </li>
  <?php endif;?>
<?php endforeach ?>
</ol>