<ol>
<?php foreach ($this->getItems() as $_item): ?>
   <li>
    <?php if ($_item->getCount() > 0): ?>
    <div class="ajaxloader">
       <a data-url="<?php echo $_item->getUrl() ?>" 
	    	   name="<?php echo $_item->getFilter()->getRequestVar(); ?>"
	    	   value="<?php echo $_item->getValueString(); ?>" class="ajaxfilter" href="<?php echo $this->urlEscape($_item->getUrl()) ?>">
       		<div class="ratings">
		       	<div class="rating-box">
		         	<div class="rating" style="width:<?php echo $_item->getValue()*20; ?>%"></div>
		         </div>
	            <?php if($_item->getValue() > 0 ):?>
	          	<span> & Up</span>
	           <?php endif;?>
	   </a> 
	    <span class="rating_block">(<?php echo $_item->getCount() ?>)</span>
     </div>               
     </div>
    <?php else: ?>
    <div class="ratings">
       	<div class="rating-box">
        	<div class="rating" style="width:<?php echo $_item->getValue()*20?>%" ;></div>
        </div>
            <?php if($_item->getValue() > 0 ):?>
           	& Up
           <?php endif;?>
           <span class="rating_block">(<?php echo $_item->getCount() ?>)</span>
        </div>
       <?php endif; ?>
       <?php if ($this->shouldDisplayProductCount()): ?>      
       <?php endif; ?>
  </li>
<?php endforeach ?>
</ol>