/**
 * This file is used to display Deal of the day side bar
 */
$products = $this->getProductCollection();
$coreHelper = $this->helper('core');
?>
<div class="block block-list block-viewed">
    <div class="block-title">
        <strong> <span><?php echo $this->__('Deal Of The Day') ?> </span> </strong>
    </div>
    <div class="block-content">
        <?php if (count($products) > 0): ?>
            <ol id="best-sidebar" class="mini-products-list">
                <?php 
                $productCountVal = count($products);
                $productIncrement = 1;
                foreach ($products as $item): ?>
                    <?php
                    $originalPrice = $item->getPrice(); 
                    $discountPrice = $item->getSpecialPrice(); 
                    $savings = $originalPrice - $discountPrice; 
                    $savingsPercentage = round(($savings / $originalPrice) * 100, 0);
                    for ($increment = 0; $increment < 1; $increment++) { ?>
                        <li class="item <?php if($productIncrement == $productCountVal){ echo ' last '; } ?> <?php if($productIncrement % 2 == 0){ echo ' even'; }else{ echo ' odd'; } ?>">
                            <a href="<?php echo $item->getProductUrl() ?>">
                            <span class="product-image">
                            <img src="<?php echo $this->helper('catalog/image')->init($item, 'thumbnail'); ?>"
                                    alt="<?php echo $this->htmlEscape($item->getName()) ?>"
                                    width="50" height="50" />
                            </span>        
                            </a>
                            <div class="product-details">
                               <p class="product-name">
                                    <a href="<?php echo $item->getProductUrl() ?>"><?php
                                     echo $this->htmlEscape($item->getName()) ?> </a>
                                </p>                               
                                <span
                                 class="original_price"> 
                                    <?php 
                                    echo $coreHelper->currency($item->getPrice(), true, false); ?>
                                </span> 
                                <span class="offer_price"> 
                                    <?php echo $coreHelper->currency($item->getSpecialPrice(), true, false); ?></span>
                                <span class="discount_label">
                                     <?php echo $this->__('Discount: ') ?> </span> 
                                <span class="discount_price" <?php echo $this->getIdSuffix() ?>>
                                      <?php
                                       echo $savingsPercentage, '%';
                                       echo ' '.$this->__('Off'); ?>
                                </span>                                    
                            </div>
                        </li>
                    <?php } 
                    $productIncrement++;
                    endforeach ?>
            </ol>
            <script>
                decorateList('best-sidebar', 'none-recursive');
            </script>
        <?php else: ?>
            <div class="empty">
                <?php echo $this->__('No items for this category') ?>
            </div>
        <?php endif ?>
    </div>
</div>
