    function validateFileExtension(fld) {
        if (!/(\.bmp|\.png|\.gif|\.jpg|\.jpeg)$/i.test(fld.value)) {
            fld.form.reset();
            fld.focus();
            $('errormsg').show();
            document.getElementById("errormsg").innerHTML = "Invalid file format";
            return false;
        }
        return true;
    }

